
<%= form_tag "/login" do %>



<h1>Please login</h1>

<div class="form-group">
  <%= label_tag "email" %>
  <%= text_field_tag "email", @old_email, class: "form-control" %>
</div>

<div class="form-group">
  <%= label_tag "password" %>
  <br>
  <%= password_field_tag "password", "", class: "form-control" %>
</div>

<div class="form-group">
  <%= submit_tag "Login", class: "btn btn-primary" %>
</div>


</body>



<%end%>