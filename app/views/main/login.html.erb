
<%= form_tag "/login" do %>
<% if @user != nil %>
  <b><%=@user.username%> you are already signed in. Go to your profile <a href="/profiles/<%=@user.id%>">Here</a></b>
<%end%>

<h1>Please login</h1>

<div class="form-group">
  <%= label_tag "email" %>
  <%= text_field_tag "email", @old_email, class: "form-control" %>
</div>

<div class="form-group">
  <%= label_tag "password" %>
  <br>
  <%= password_field_tag "password", "", class: "form-control" %>
</div>

<div class="form-group">
  <%= submit_tag "Login", class: "btn btn-primary" %>
</div>


</body>


