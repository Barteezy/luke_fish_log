
<%= form_tag "/add_fish" do %>
<h2>What did you catch?</h2>

<h2>Enter the Deets</h2>
<%=label_tag "Location" %>


<div class="form-group">
  <%= text_field_tag "location","", placeholder: "Location", rows: 20, class: "form-control" %>
</div>

<%=label_tag "Species" %>

<div class="form-group">
  <%= text_field_tag "species", "", placeholder: "Species", class: "form-control"%>
</div>

<%=label_tag "Length" %>

<div class="form-group">
  <%= text_field_tag "length", "", placeholder: "Length", class: "form-control" %>
</div>

<%=label_tag "Weight" %>

<div class="form-group">
  <%= text_field_tag "weight", "", placeholder: "Weight", class: "form-control" %>
</div>

<%=label_tag "Bait" %>

<div class="form-group">
  <%= text_field_tag "bait", "", placeholder: "Bait", class: "form-control" %>
</div>

<%=label_tag "Depth" %>

<div class="form-group">
  <%= text_field_tag "depth", "", placeholder: "Depth", class: "form-control"%>
</div>

<%=label_tag "Temperature" %>

<div class="form-group">
  <%= text_field_tag "temperature", "", placeholder: "Temperature", class: "form-control" %>
</div>

<%=label_tag "Other Notes" %>

<div class="form-group">
  <%= text_field_tag "other_notes", "", placeholder: "Other Notes", class: "form-control" %>
</div>






<h2>Take a Picture!</h2>

<button type="button" class="btn btn-default btn-lg">
  <span class="glyphicon glyphicon-camera"></span> Picture
</button>

<h2>Mark Your GPS Location</h2>

<button type="button" class="btn btn-default btn-lg">
  <span class="glyphicon glyphicon-star"></span> Location
</button>

<h2>Upload Fish</h2>
<%= submit_tag "Upload Fish" %>

<%end%>

