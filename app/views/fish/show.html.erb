<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel heading center">
    <%= image_tag @fish.image.url(:large) %>
      </div>
      <div class="panel body center">
    <p>
      <b>Date:</b>
      <%= @fish.date%>
    </p>
    <p>
      <b>Location:</b>
      <%= @fish.location %>
    </p>

    <p>
      <strong>Species:</strong>
      <%= @fish.species %>
    </p>

    <p>
      <strong>Lenth:</strong>
      <%= @fish.lenth %>
    </p>

    <p>
      <strong>Weight:</strong>
      <%= @fish.weight %>
    </p>

    <p>
      <strong>Bait:</strong>
      <%= @fish.bait %>
    </p>

    <p>
      <strong>Depth:</strong>
      <%= @fish.depth %>
    </p>

    <p>
      <strong>Temperature:</strong>
      <%= @fish.temperature %>
    </p>

    <p>
      <strong>Other notes:</strong>
      <%= @fish.other_notes %>
    </p>
</div>
</div>

<% if current_user != nil && current_user.id == @fish.user_id %>
  <%= link_to edit_fish_path do %>
        <span class="glyphicon glyphicon-edit">Edit</span>
        <%end%>|
          <%= link_to fish_index_path do %>
        <span class="glyphicon glyphicon-th"><%=current_user.username%>'s-Fish</span>
        <%end%>|
     
          <%= link_to fish_index_path do %>
          <span class="glyphicon glyphicon-step-backward">Back</span>
      <%end%>
      <%end%>
       <%= link_to recent_path do %>
          <span class="glyphicon glyphicon-step-backward">Recent</span>
<%end%>

